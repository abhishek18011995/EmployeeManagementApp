@model Employee;


@{
    var photoPath = "~/images/" + (Model.PhotoPath ?? "minion.jpg");
}

<div class="container-fluid">
    <div id="empDetails" class="row">
        <div class="card text-center" style="margin: 0 auto;">
            <div style="width:400px;">
                <img src="@photoPath" class="card-img-top" alt="minion" asp-append-version="true">
            </div>
            <div class="card-body">
                <h5 class="card-title">Employee Details</h5>
                <p class="card-text">Name: @Model.Name</p>
                <p class="card-text">Email: @Model.Email</p>
                <p class="card-text">Department: @Model.Department</p>
                <a class="btn btn-primary" asp-controller="home" asp-action="index" >Back</a>
                <a asp-controller="home" asp-action="update" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                <a asp-controller="home" asp-action="remove" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>