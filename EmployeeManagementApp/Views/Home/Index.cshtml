@model IEnumerable<Employee>;


<div class="container-fluid">
    <div id="empList" class="row">
        @foreach (Employee emp in @Model)
        {

            var photoPath = "~/images/" + (@emp.PhotoPath ?? "minion.jpg");


            <div class="col-lg-3 col-md-4 col-sm-6 col-12" style="margin-bottom:20px;">
                <div class="card text-center">
                    <img src="@photoPath" class="card-img-top" alt="minion" asp-append-version="true">
                    <div class="card-body">
                        <h5 class="card-title">Employee Details</h5>
                        <p class="card-text">Name: @emp.Name</p>
                        <p class="card-text">Email: @emp.Email</p>
                        <p class="card-text">Department: @emp.Department</p>
                        <a class="btn btn-primary" asp-controller="home" asp-action="details" asp-route-id="@emp.Id">View</a>
                        <a asp-controller="home" asp-action="update" asp-route-id="@emp.Id" class="btn btn-primary">Edit</a>
                        <a asp-controller="home" asp-action="remove" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>